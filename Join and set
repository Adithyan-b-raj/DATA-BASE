-- 1. LEFT JOIN between EMPLOYEE & PROJECT
SELECT *
FROM EMPLOYEE e
LEFT JOIN PROJECT p
ON e.ENO = p.ENO;

-- 2. RIGHT JOIN between EMPLOYEE & PROJECT
SELECT *
FROM EMPLOYEE e
RIGHT JOIN PROJECT p
ON e.ENO = p.ENO;

-- 3. FULL JOIN between EMPLOYEE & PROJECT
SELECT *
FROM EMPLOYEE e
FULL OUTER JOIN PROJECT p
ON e.ENO = p.ENO;

-- 4. NATURAL JOIN between EMPLOYEE & PROJECT
SELECT *
FROM EMPLOYEE
NATURAL JOIN PROJECT;

-- 5. Salary of employees with ENO = 'E1' and 'E3' (UNION)
SELECT ENO, SALARY
FROM EMPLOYEE
WHERE ENO = 'E1'
UNION
SELECT ENO, SALARY
FROM EMPLOYEE
WHERE ENO = 'E3';

-- 6. Common salary of employees in project P1 and P2 (INTERSECT)
SELECT SALARY
FROM EMPLOYEE e
JOIN PROJECT p ON e.ENO = p.ENO
WHERE p.PNO = 'P1'
INTERSECT
SELECT SALARY
FROM EMPLOYEE e
JOIN PROJECT p ON e.ENO = p.ENO
WHERE p.PNO = 'P2';

-- 7. Different designations in project P3 but not in P1 (MINUS)
SELECT DESIGNATION
FROM EMPLOYEE e
JOIN PROJECT p ON e.ENO = p.ENO
WHERE p.PNO = 'P3'
MINUS
SELECT DESIGNATION
FROM EMPLOYEE e
JOIN PROJECT p ON e.ENO = p.ENO
WHERE p.PNO = 'P1';
